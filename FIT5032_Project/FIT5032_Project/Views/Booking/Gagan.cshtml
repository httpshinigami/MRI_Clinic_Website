    <table class="table">
        <tr>
            <th>Time</th>
            <th>Availability</th>
        </tr>
        @while (currentTime < endTime)
        {
            <tr>
                <td>@currentTime.ToString(@"hh\:mm")</td>
                <td>
                    @if (Model.Any(booking => booking.BookingTime == currentTime))
                    {
                        <span style="color: red;">Booked</span>
                    }
                    else
                    {
                        @Html.ActionLink("Book Appointment", "Book", new { appointmentTime = currentTime.ToString() })
                    }
                </td>
            </tr>
            currentTime = currentTime.Add(interval); // Move to the next hour
        }
    </table>


    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create Booking" class="btn btn-primary" />
        </div>
    </div>

    <br />
    <br />
