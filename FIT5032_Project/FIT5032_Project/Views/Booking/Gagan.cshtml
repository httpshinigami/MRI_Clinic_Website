    ViewBag.Title = "Gagan";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (ViewBag.DoctorNames == null)
    {
        ViewBag.DoctorNames = new List<string>();
    }

    TimeSpan currentTime = new TimeSpan(10, 0, 0); // 10:00 AM
    TimeSpan endTime = new TimeSpan(18, 0, 0);    // 6:00 PM
    TimeSpan interval = new TimeSpan(1, 0, 0);     // 1 hour interval
    var firstBooking = Model.FirstOrDefault();




}

